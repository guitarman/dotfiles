#!/usr/bin/env bash

# Easier navigation: .., ..., ...., ....., ~ and -
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias ~="cd ~" # `cd` is probably faster to type though
alias -- -="cd -"

# Disk utilities
alias cp="cp -i" # confirm overwrite
alias df="df -h" # human readable sizes

# Folders shortcuts
alias db="cd ~/Dropbox"
alias dl="cd ~/Downloads"
alias dt="cd ~/Desktop"
alias p="cd ~/Work/coding"
alias d="~/bin/dropbox.py"

# Commands shortcuts
alias g="git"
alias h="history"
alias j="jobs"
alias more=less

